@model IEnumerable<eTickets.Models.Cinema>

@{
    ViewData["Title"] = "Cinemas List";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">🎬 Cinemas List</h2>

    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th style="width:250px;">@Html.DisplayNameFor(model => model.Logo)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th style="width:300px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cinema in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img src="@cinema.Logo"
                             alt="@cinema.Name"
                             class="rounded-circle"
                             style="width:200px; height:200px; object-fit:cover;" />
                    </td>
                    <td class="fw-bold align-middle">
                        @Html.DisplayFor(modelItem => cinema.Name)
                    </td>
                    <td class="text-muted align-middle">
                        @Html.DisplayFor(modelItem => cinema.Description)
                    </td>
                    <td class="align-middle">
                        <a asp-action="Edit" asp-route-id="@cinema.CinemaId"
                           class="btn btn-sm btn-warning me-2">✏️ Edit</a>

                        <a asp-action="Details" asp-route-id="@cinema.CinemaId"
                           class="btn btn-sm btn-info me-2">📄 Details</a>

                        <a asp-action="Delete" asp-route-id="@cinema.CinemaId"
                           class="btn btn-sm btn-danger">🗑️ Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
