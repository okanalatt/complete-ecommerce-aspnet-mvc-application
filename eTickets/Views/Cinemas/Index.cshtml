@model IEnumerable<eTickets.Models.Cinema>

@{
    ViewData["Title"] = "Cinemas List";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">
        <i class="bi bi-camera-reels-fill"></i> Cinemas List
    </h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var cinema in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="text-center mt-3">
                        <img src="@cinema.Logo"
                             alt="@cinema.Name"
                             class="rounded-circle"
                             style="width:150px; height:150px; object-fit:cover;" />
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">@cinema.Name</h5>
                        <p class="card-text text-muted">@cinema.Description</p>
                    </div>
                    <div class="card-footer d-flex justify-content-center gap-2 bg-white border-0">
                        <a asp-action="Edit" asp-route-id="@cinema.Id" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@cinema.Id" class="btn btn-sm btn-info text-white">
                            <i class="bi bi-eye-fill"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@cinema.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Add New Floating Button -->
<a asp-action="Create" class="btn btn-success position-fixed"
   style="bottom:20px; right:20px; border-radius:50%; width:70px; height:70px;
          font-size:24px; display:flex; align-items:center; justify-content:center;"
   title="Add New Cinema">
    <i class="bi bi-plus-lg"></i>
</a>
