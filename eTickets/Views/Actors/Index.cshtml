@model IEnumerable<eTickets.Models.Actor>

@{
    ViewData["Title"] = "Actors List";
}

<div class="container mt-5">
    <h2 class="text-center mb-5 text-primary"><i class="bi bi-people-fill"></i> Actors List</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-muted fs-5">No actors found.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var actor in Model)
            {
                <div class="list-group-item mb-3 shadow-sm rounded-4 d-flex flex-column flex-md-row align-items-center p-3 position-relative">

                    <!-- Profil Resmi -->
                    <img src="@(!string.IsNullOrEmpty(actor.ProfilePictureURL) ? actor.ProfilePictureURL : "https://via.placeholder.com/200")"
                         alt="@actor.FullName"
                         class="rounded-circle shadow-sm mb-3 mb-md-0"
                         style="width:180px; height:180px; object-fit:cover; transition: transform 0.3s;"
                         onmouseover="this.style.transform='scale(1.08)';"
                         onmouseout="this.style.transform='scale(1)';" />

                    <!-- Bilgiler ve Butonlar -->
                    <div class="ms-md-4 flex-grow-1 d-flex flex-column justify-content-between w-100">
                        <div class="text-center text-md-start">
                            <h4 class="fw-bold mb-2">@actor.FullName</h4>
                            <p class="text-muted mb-0" style="line-height:1.4;">@actor.Bio</p>
                        </div>

                        <!-- Action Butonları sağda -->
                        <div class="d-flex justify-content-center justify-content-md-end gap-2 mt-3">
                            <a asp-action="Edit" asp-route-id="@actor.Id" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@actor.Id" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-file-earmark-text"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@actor.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div class="text-white">
    <a asp-controller="Actors" asp-action="Create"
       class="btn btn-success position-fixed shadow d-flex align-items-center gap-2"
       style="bottom:20px; right:20px; border-radius:12px; padding:12px 20px; font-size:16px; transition: all 0.2s;"
       title="Add New Actor"
       onmouseover="this.style.transform='scale(1.05)';"
       onmouseout="this.style.transform='scale(1)';">
        <i class="bi bi-plus"></i>
        Add New Actor
    </a>
</div>
