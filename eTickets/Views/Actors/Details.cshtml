@model eTickets.Models.Actor

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg rounded-4 p-4 text-center">

                <h2 class="mb-3 fw-bold">@Model.FullName</h2>

                <div class="mb-4 d-flex justify-content-center">
                    <img src="@(!string.IsNullOrEmpty(Model.ProfilePictureURL) ? Model.ProfilePictureURL : "https://via.placeholder.com/200")"
                         alt="@Model.FullName"
                         class="rounded-circle shadow"
                         style="width:200px; height:200px; object-fit:cover;" />
                </div>

                <p class="text-secondary mb-4">@Model.Bio</p>

                <div class="d-flex justify-content-center gap-3">
                    <a asp-action="Edit" asp-route-id="@Model.ActorId" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.ActorId" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>
