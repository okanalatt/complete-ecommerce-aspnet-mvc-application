@model eTickets.Models.Actor

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg rounded-4 p-4 text-center">

                <!-- Başlık -->
                <h2 class="mb-3 fw-bold">Details for @Model.FullName</h2>

                <!-- Profil Resmi -->
                <div class="mb-4 d-flex justify-content-center">
                    <img src="@(!string.IsNullOrEmpty(Model.ProfilePictureURL) ? Model.ProfilePictureURL : "https://via.placeholder.com/200")"
                         alt="@Model.FullName"
                         class="rounded-circle shadow"
                         style="width:200px; height:200px; object-fit:cover; transition: transform 0.3s;"
                         onmouseover="this.style.transform='scale(1.08)';"
                         onmouseout="this.style.transform='scale(1)';" />
                </div>

                <!-- Full Name -->
                <h3 class="fw-bold mb-2">@Model.FullName</h3>

                <!-- Bio -->
                <p class="text-secondary mb-4" style="font-size:1rem; line-height:1.6;">
                    @Model.Bio
                </p>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a asp-action="Edit" asp-route-id="@Model.ActorId" class="btn btn-warning btn-sm d-flex align-items-center gap-1">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm d-flex align-items-center gap-1">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>
