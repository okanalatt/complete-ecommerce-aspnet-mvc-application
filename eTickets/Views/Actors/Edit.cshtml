@model eTickets.Models.Actor
@{
    ViewData["Title"] = "Update Actor";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Gizli alan: ActorId POST edilir -->
            <input type="hidden" asp-for="Id" />

            <!-- Profil resmi önizleme -->
            <div class="form-group text-center mb-3">
                <img id="ProfilePicturePreview" src="@Model.ProfilePictureURL"
                     alt="Profile Picture Preview"
                     class="rounded-circle shadow-sm"
                     style="width:150px; height:150px; object-fit:cover;" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProfilePictureURL" class="form-label"></label>
                <input asp-for="ProfilePictureURL" class="form-control" id="ProfilePictureURL" />
                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Bio" class="form-label"></label>
                <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-outline-success">Update</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Show All</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();

            $("#ProfilePictureURL").on("input", function () {
                var url = $(this).val();
                if (url) {
                    $("#ProfilePicturePreview").attr("src", url);
                } else {
                    $("#ProfilePicturePreview").attr("src", "");
                }
            });
        });
    </script>
}
