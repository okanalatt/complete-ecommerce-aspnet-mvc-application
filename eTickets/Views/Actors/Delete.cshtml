@model eTickets.Models.Actor

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg rounded-4 p-4 text-center border-danger">
                <h2 class="mb-3 fw-bold text-danger">Delete Actor</h2>

                <div class="mb-4 d-flex justify-content-center">
                    <img src="@(!string.IsNullOrEmpty(Model.ProfilePictureURL) ? Model.ProfilePictureURL : "https://via.placeholder.com/200")"
                         alt="@Model.FullName"
                         class="rounded-circle shadow"
                         style="width:200px; height:200px; object-fit:cover;" />
                </div>

                <h3 class="fw-bold mb-2">@Model.FullName</h3>
                <p class="text-secondary mb-4">@Model.Bio</p>

                <div class="d-flex justify-content-center gap-3">
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteLabel">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong>@Model.FullName</strong>?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ActorId" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
