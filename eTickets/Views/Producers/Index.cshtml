@model IEnumerable<eTickets.Models.Producer>

@{
    ViewData["Title"] = "Producers List";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">🎬 Producers List</h2>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-hover text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width:250px;">@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Bio)</th>
                <th style="width:300px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producer in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img src="@producer.ProfilePictureURL"
                             alt="@producer.FullName"
                             class="rounded-circle img-thumbnail"
                             style="width:200px; height:200px; object-fit:cover;" />
                    </td>
                    <td class="fw-bold align-middle">
                        @Html.DisplayFor(modelItem => producer.FullName)
                    </td>
                    <td class="text-muted align-middle">
                        @Html.DisplayFor(modelItem => producer.Bio)
                    </td>
                        <td>
                        <div class="d-flex justify-content-center gap-2 flex-wrap">
                            <a asp-action="Edit" asp-route-id="@producer.ProducerId"
                               class="btn btn-warning btn-sm" aria-label="Edit Producer">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@producer.ProducerId"
                               class="btn btn-info btn-sm text-white" aria-label="View Details">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@producer.ProducerId"
                               class="btn btn-danger btn-sm" aria-label="Delete Producer"
                               onclick="return confirm('Are you sure you want to delete this producer?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>